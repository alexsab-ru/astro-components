---
import settings from '@/data/settings.json';
import Site from '@/sites/Site.astro';
import SiteAlphaCenter from '@/sites/SiteAlphaCenter.astro';
import SiteChinaSamaraAuto from '@/sites/SiteChinaSamaraAuto.astro';
import SiteInfinitiSamauto from '@/sites/SiteInfinitiSamauto.astro';
import Landing from '@/sites/Landing.astro';
import LandingEVOLUTE from '@/sites/LandingEVOLUTE.astro';
import LandingGAC from '@/sites/LandingGAC.astro';
import LandingGEELY from '@/sites/LandingGEELY.astro';
import LandingHONDA from '@/sites/LandingHONDA.astro';
import LandingHAVAL from '@/sites/LandingHAVAL.astro';
import ServiceKIA from '@/sites/ServiceKIA.astro';
import SiteGacArmada from '@/sites/SiteGacArmada.astro';

const SiteType = {
	LANDING: 'landing',
	LANDING_EVOLUTE: 'landing-evolute',
	LANDING_GAC: 'landing-gac',
	SITE_GAC_ARMADA: 'site-gac-armada',
	LANDING_GEELY: 'landing-geely',
	LANDING_HONDA: 'landing-honda',
	LANDING_HAVAL: 'landing-haval',
	SITE: 'site',
	SITE_ALPHA_CENTER: 'site-alpha-center',
	SITE_CHINA_SAMARA_AUTO: 'site-china-samara-auto',
	SITE_INFINITI_SAMAUTO: 'site-infiniti-samauto',
	SERVICE_KIA: 'service-kia'
};
const { siteType } = settings;
let Content: typeof Site | typeof Landing;

switch(siteType) {
	case SiteType.LANDING:
		Content = Landing;
		break;
	case SiteType.LANDING_EVOLUTE:
		Content = LandingEVOLUTE;
		break;
	case SiteType.LANDING_GAC:
		Content = LandingGAC;
		break;
	case SiteType.LANDING_GEELY:
		Content = LandingGEELY;
		break;
	case SiteType.LANDING_HONDA:
		Content = LandingHONDA;
		break;
	case SiteType.LANDING_HAVAL:
		Content = LandingHAVAL;
		break;
	case SiteType.SITE:
		Content = Site;
		break;
	case SiteType.SITE_ALPHA_CENTER:
		Content = SiteAlphaCenter;
		break;
	case SiteType.SITE_CHINA_SAMARA_AUTO:
		Content = SiteChinaSamaraAuto;
		break;
	case SiteType.SITE_GAC_ARMADA:
		Content = SiteGacArmada;
		break;
	case SiteType.SITE_INFINITI_SAMAUTO:
		Content = SiteInfinitiSamauto;
		break;
	case SiteType.SERVICE_KIA:
		Content = ServiceKIA;
		break;
	default:
		Content = Site;
}
---

<Content />

---
import type { TAdvantagesItem } from './types';
interface Props {
	item: TAdvantagesItem;
	classes?: string;
};
const {
	item,
	classes = 'bg-gray-100 py-6 lg:py-10 px-2 flex flex-col items-center',
	...rest
} = Astro.props;
const {
	iconName,
	iconClass = 'text-4xl lg:text-6xl mb-3 lg:mb-6',
	iconColor = '',
	title,
	titleClass = 'text-lg lg:text-2xl mb-3 lg:mb-6 leading-none!',
	text,
	textClass = 'text-gray-600 text-xs md:text-sm'
} = item;
 
import { Icon } from 'astro-icon/components';
---

<div class={classes} {...rest}>
	{ iconName && <Icon name={iconName} class={`${iconColor} ${iconClass}`} title={title} /> }
	<div class={titleClass}><Fragment set:html={ title } /></div>
	{ text && <div class={textClass}><Fragment set:html={ text } /></div> }
</div>
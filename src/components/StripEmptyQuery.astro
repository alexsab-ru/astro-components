---
// Никакого SSR: скрипт исполняется в браузере
---
<script data-remove-script-after-work="check_empty_query" is:inline>
if (location.href.split("#")[0].slice(-1) === '?') { const target = location.pathname + location.hash; location.replace(target); } else { const script = document.querySelector('script[data-remove-script-after-work="check_empty_query"]'); if (script) { script.remove(); } }
</script>

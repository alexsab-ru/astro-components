---
import type { TBrandHistoryItem } from './types';
interface Props {
    item: TBrandHistoryItem
}
const { item } = Astro.props;
---
<div class="flex flex-col sm:even:flex-row sm:odd:flex-row-reverse sm:gap-5 sm:odd:text-right items-center justify-between relative z-10 sm:text-lg">
    <div class="py-2 px-4 flex-1"></div>
    <div class="py-2 bg-white text-gray-600 text-4xl text-center">{item.year}</div>
    <div class="py-2 px-4 flex-1"><Fragment set:html={item.html} /></div>
</div>
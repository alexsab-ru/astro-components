---
import type {TButtonData} from './types'
interface Props extends TButtonData {}
const {
    view = 'link',
    classes,
    url,
    title = 'BUTTON',
    dataTitle,
    dataFormName,
    dataImg,
    dataImgPosition,
    icon,
    iconClasses,
    ...rest
} = Astro.props;
import {Icon} from 'astro-icon/components';
---

{
    view === 'link' ? (
    <a
        class={`btn ${classes}`}
        href={url ? url : '#'}
        data-title={dataTitle}
        data-form_name={dataFormName}
        data-img={dataImg}
        data-img_position={dataImgPosition}
        {...rest}
    >
        <span>{title}</span>
        {icon && <Icon name={icon} class={iconClasses} />}
    </a>
    ) :
    view === 'form-button' ? (
    <input
        type="submit"
        class={`btn ${classes}`}
        value={title}
        {...rest}
    />
    ) :
    view === 'popup-link' ? (
        <a
            class={`popup-link ${classes}`}
            href={url ? url : '#'}
            data-title={dataTitle}
            data-form_name={dataFormName}
            {...rest}
        >
            <span>{title}</span>
            {icon && <Icon name={icon} class={iconClasses} />}
        </a>
    ) :
    view === 'scroll-link' ? (
        <a 
            class={`scroll-link ${classes}`}
            href={url ? url : '#'}
            {...rest}
        >
            <span>{title}</span>
            {icon && <Icon name={icon} class={iconClasses} />}
        </a>
    ) : ('')
}

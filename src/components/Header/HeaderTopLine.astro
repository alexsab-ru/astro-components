---
interface Props{
	content: string;
	classes?: string;
	closeBtn?: boolean;
}
import { Icon } from 'astro-icon/components';
import settings from '@/data/settings.json';
const { is_header_transparent } = settings;
const defaultClasses = 'px-12 py-2 xs:text-xs text-sm md:text-base text-center text-white/80 relative';
const {content, classes = is_header_transparent ? defaultClasses : 'bg-accent-500 ' + defaultClasses, closeBtn = true} = Astro.props
---
<div x-show="showTopLine === 1" x-cloak class="border-header-border-transparent border-b">
	<div class={classes}>
		<Fragment set:html={content}>
		{closeBtn && (
			<button 
				class="text-base absolute h-8 sm:h-full w-8 sm:w-10 right-0 top-0 z-10"
				@click="hideTopLine"
			>
				<Icon name="mdi:close" class="text-lg text-white/80 hover:text-white transition-colors" />
			</button>
		)}
	</div>
</div>
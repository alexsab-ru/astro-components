---
import { BRAND, LEGAL_CITY_WHERE } from '@/const.js';
interface Props {
	title?: string;
}
const { title } = Astro.props;
const pageTitle = title ? title : `Автомобили ${BRAND} в&nbsp;наличии в&nbsp;${LEGAL_CITY_WHERE}`;
---

<section class="ptop-[2.7] pbottom-[2.5] bg-accent-500">
	<div class="container">
		<h1 class="text-center fz-[3] text-white font-medium leading-none"><Fragment set:html={ pageTitle } /></h1>
	</div>
</section>
---
import SpecialServiceItem from './Item.astro'
import { type TSpecialService  } from './types'
interface Props {
	items: TSpecialService[];
	title?: string;
}
const { items = [], title } = Astro.props;
---
{items.length > 0 && (
<section class="" id="specials">
	<div class="container">
		{title && (<h2 class="text-xl sm:text-4xl font-normal mb-8 sm:mb-14">{title}</h2>)}
		<div class="grid grid-cols-1 md:grid-cols-2 gap-x-5 gap-y-4 sm:gap-y-5">
			{items.map(item => <SpecialServiceItem item={item} />)}
		</div>
	</div>
</section>
)}
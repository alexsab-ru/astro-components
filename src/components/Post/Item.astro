---
interface Props {
	post: any
}
const { post } = Astro.props;
import FormattedDate from '@/components/FormattedDate.astro';
import { LAST_DAY, MONTH, YEAR } from '@/js/utils/date';
let date = null;
post.data?.toDate && typeof post.data?.toDate === 'boolean'
	? (date = new Date(`${YEAR}-${MONTH}-${LAST_DAY}`))
	: post.data?.toDate && typeof post.data?.toDate === 'object'
		? (date = post.data?.toDate)
		: post.data?.pubDate
			? (date = post.data?.pubDate)
			: null;
---
<a 
	href={`/${post.collection}/${post.slug}/`}
	class="!no-underline"
>
	<div class="bg-gray-50 group rounded-2xl relative aspect-video overflow-hidden">
		<img src={post.data.image} class="absolute w-full h-full object-cover object-center transition-transform duration-300 group-hover:scale-110" alt={post.data.title} loading="lazy">
	</div>
	<div class="text-black mt-2 sm:mt-4 leading-none">{post.data.caption || post.data.title}</div>
	{date && (<FormattedDate date={date} toDate={post.data?.toDate ? true : false} />)}
</a>